@page
@model IndexModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Index; 

    
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<body>

    
    <div class="flex-container ">
   <div class="flex-child card">      
        <div class="col-md-12">       
                 <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>            
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.BirthDate" class="form-control" />
                <label asp-for="Input.BirthDate" class="form-label"></label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.JobTitle" class="form-control" />
                <label asp-for="Input.JobTitle" class="form-label"></label>
                <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.AboutMe" class="form-control" />
                <label asp-for="Input.AboutMe" class="form-label"></label>
                <span asp-validation-for="Input.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.HeadLine" class="form-control" />
                <label asp-for="Input.HeadLine" class="form-label"></label>
                <span asp-validation-for="Input.HeadLine" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.City" class="form-control" />
                <label asp-for="Input.City" class="form-label"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.State" class="form-control" />
                <label asp-for="Input.State" class="form-label"></label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LinkedIn" class="form-control" />
                <label asp-for="Input.LinkedIn" class="form-label"></label>
                <span asp-validation-for="Input.LinkedIn" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.GitHub" class="form-control" />
                <label asp-for="Input.GitHub" class="form-label"></label>
                <span asp-validation-for="Input.GitHub" class="text-danger"></span>
            </div>            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-md btn-outline-primary">Save</button>
        </form>
          
        </div>
        </div>
       
        
        <div class="flex-child card">     
    <div class="col-md-12 text-wrap" style="text-align:center; padding-left:20px; padding-right:20px; padding-top:40px;" >      
         <h1>@Html.DisplayTextFor(model => model.Input.FirstName) @Html.DisplayTextFor(model => model.Input.LastName) </h1> 
         <h4>@Html.DisplayTextFor(model => model.Input.HeadLine)</h4>
    <center><h5>@Html.DisplayTextFor(model => model.Input.JobTitle)</h5></center>
  <p>@Html.DisplayTextFor(model => model.Input.City) @Html.DisplayTextFor(model => model.Input.State) </p>
  <p>@Html.DisplayTextFor(model => model.Input.AboutMe)</p>
  <div class="socialmedia">   
    <a href="https://github.com/" target="_blank"><ion-icon name="logo-github"></ion-icon></a>
    <a href="https://www.linkedin.com/" target="_blank"><ion-icon name="logo-linkedin"></ion-icon></a>
  </div>       
    </div> 
    </div> 
    </div>
</body>

@section Scripts {
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<partial name="_ValidationScriptsPartial" />
}
