@model Tech_Pursuit.Pages.Jobs.IndexModel

@{
    ViewData["Title"] = "PostJobs";
}

<h1>Post New Job</h1>

<p>
    <a class="btn-lg btn-primary" asp-page="Create">Create Job</a>
</p>
@foreach (var item in Model.JobModel) {
<div class="card text-white bg-primary mb-3" style="max-width: 100%;">
  <div class="card-body text-wrap">
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].CompanyName)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.CompanyName)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].AboutCompany)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.AboutCompany)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].CompanyWebsite)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.CompanyWebsite)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].JobDescription)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.JobDescription)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].RequiredSkills)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.RequiredSkills)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].City)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.City)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].State)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.State)</p>
    <h4 class="card-title">@Html.DisplayNameFor(model => model.JobModel[0].UserID)</h4>
    <p class="card-text">@Html.DisplayFor(modelItem => item.UserID)</p>
    <td>               
                <a class="btn-sm btn-warning text-light" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>             
    </td>
  </div>
</div>
}






